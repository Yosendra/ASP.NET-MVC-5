@model Vidly.ViewModels.RandomMovieVM

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var className = Model.Customers.Count > 5 ? "popular" : null; 
}
<h2 class="@className">@Model.Movie.Name</h2>

@* 
    Razor syntax make us possible to write C# code like if, foreach, etc inside the View.
    Notice the @ sign.
*@
@if (Model.Customers.Count == 0)
{
    // this will be rendered without any markup tag around it
    <text>No one has rented this movie before</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
