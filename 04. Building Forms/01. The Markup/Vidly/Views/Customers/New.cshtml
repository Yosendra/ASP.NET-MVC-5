@model Vidly.Models.Customer

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@*
    Html.BeginForm() return disposable object, when disposing, it will generate closing tag of form.
    We are following bootstrap template, that is why every form input tag surrounded with div.form-group
*@
@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.BirthDate)
        @Html.TextBoxFor(c => c.BirthDate, new { @class = "form-control" })
    </div>

    <div class="form-check mt-3">
        @Html.CheckBoxFor(c => c.IsSubscribedToNewsletter, new { @class = "form-check-input" })
        @Html.LabelFor(c => c.IsSubscribedToNewsletter, "Subscribed to Newsletter?")
    </div>
}