@model Vidly.Models.Customer

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
    </div>

    <div class="form-group mt-2">
        @Html.LabelFor(c => c.BirthDate, "Date of Birth")   @* We want to custom the label text for "BirthDate" become "Date of Birth" *@
        @Html.TextBoxFor(c => c.BirthDate, new { @class = "form-control" })
    </div>

    <div class="form-check mt-3">
        @Html.CheckBoxFor(c => c.IsSubscribedToNewsletter, new { @class = "form-check-input" })
        @Html.LabelFor(c => c.IsSubscribedToNewsletter, "Subscribed to Newsletter?")
    </div>
}